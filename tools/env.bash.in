#!/bin/echo 'please source this file, do not run it'

if [ -z "$PDI_BASEDIR" ]; then

# this in in share/pdi-$VERSION, go up two directories
PDI_BASEDIR="$(readlink -f "$(dirname "${BASH_SOURCE[0]}")/../../")" 

if [ -n "$LD_LIBRARY_PATH" ]; then
	export LD_LIBRARY_PATH="${PDI_BASEDIR}/@CMAKE_INSTALL_LIBDIR@/:$LD_LIBRARY_PATH"
else
	export LD_LIBRARY_PATH="${PDI_BASEDIR}/@CMAKE_INSTALL_LIBDIR@/"
fi

if [ -n "$LIBRARY_PATH" ]; then
	export LIBRARY_PATH="${PDI_BASEDIR}/@CMAKE_INSTALL_LIBDIR@/:$LIBRARY_PATH"
else
	export LIBRARY_PATH="${PDI_BASEDIR}/@CMAKE_INSTALL_LIBDIR@/"
fi

if [ -n "$CPATH" ]; then
	export CPATH="${PDI_BASEDIR}/@CMAKE_INSTALL_INCLUDEDIR@/:$CPATH"
else
	export CPATH="${PDI_BASEDIR}/@CMAKE_INSTALL_INCLUDEDIR@/"
fi

if [ -n "$PYTHONPATH" ]; then
	export PYTHONPATH="${PDI_BASEDIR}/@PythonPath_INSTALL_SITELIBDIR@:$PYTHONPATH"
else
	export PYTHONPATH="${PDI_BASEDIR}/@PythonPath_INSTALL_SITELIBDIR@"
fi
export PYTHONPATH="${PDI_BASEDIR}/@PythonPath_INSTALL_SITEARCHDIR@:$PYTHONPATH"

if [ -n "$PATH" ]; then
	export PATH="${PDI_BASEDIR}/@CMAKE_INSTALL_BINDIR@/:$PATH"
else
	export PATH="${PDI_BASEDIR}/@CMAKE_INSTALL_BINDIR@/"
fi

if [ -n "$CMAKE_PREFIX_PATH" ]; then
	export CMAKE_PREFIX_PATH="${PDI_BASEDIR}/:$CMAKE_PREFIX_PATH"
else
	export CMAKE_PREFIX_PATH="${PDI_BASEDIR}/"
fi

echo "Environment loaded for PDI version @PDI_VERSION@"

# if [ -n "$PKG_CONFIG_PATH" ]; then
# 	export PKG_CONFIG_PATH="${PDI_BASEDIR}/lib/pkgconfig/:$PKG_CONFIG_PATH"
# else
# 	export PKG_CONFIG_PATH="${PDI_BASEDIR}/lib/pkgconfig/"
# fi
# 
# if [ -n "$MANPATH" ]; then
# 	export MANPATH="${PDI_BASEDIR}/share/man/:$MANPATH"
# else
# 	export MANPATH="${PDI_BASEDIR}/share/man/:"
# fi

fi # [ -z "$PDI_BASEDIR" ]
