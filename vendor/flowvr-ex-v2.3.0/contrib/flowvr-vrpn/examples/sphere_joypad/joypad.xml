<?xml version="1.0" encoding="LATIN1" ?>
<device name="joypad" server="Joylin0@localhost">
	<info>A module designed for the use of a joypad in flowvr-vrpn applications</info>
	<input>
		<buttons type="BUTTONCB">
			<button id="0" name="Cone Activation"> </button>
		</buttons>
		<analog type="ANALOGCB">
			<dpad idlr="5" idtd="5" name="XxY"> </dpad>
			<stick idtd="0" idlr="1" name="XxZ"> </stick>
			<slider id="2" name="Slider"> </slider>
			<stick idtd="3" idlr="4" name="Rotation around Y"> </stick>
		</analog>
	</input>
</device>
