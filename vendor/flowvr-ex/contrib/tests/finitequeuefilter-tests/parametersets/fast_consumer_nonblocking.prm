# we set the queue length to 256 for no particular reason
finitefilterqueuetest:queue_length=256
finitefilterqueuetest/drive-sender:freq=100
finitefilterqueuetest/drive-receiver:freq=1000

# receiver proceeds upon every token of the freq-filter (1000Hz)
finitefilterqueuetest/receiver:blocking-in=false
finitefilterqueuetest/receiver:request=1